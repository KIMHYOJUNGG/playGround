<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<insert id="register">
		insert into member(no,nickname,regdate,id,password,email,image,welcome) values(member_seq.nextval,#{nickname},sysdate,#{id},#{password},#{email},#{image},'안녕')
	</insert>
	<!-- 중복아이디가 있나 -->
	<select id="id" resultType="hashmap">
		select id from member where id=#{id}
	</select>
	<select id="login" resultType="hashmap">
		select * from member where
		id=#{id} and password=#{password}
	</select>
	<!-- 아이디찾기 -->
	<select id="idsearch" resultType="hashmap">
		select * from member where email=#{email}
	</select>
	
	<!-- 비밀번호 찾기 -->
	<select id="passwordsearch" resultType="hashmap">
		select * from member where id=#{id} and email=#{email}
	</select>

	<!-- 관리자에서의 멤버관리-->
	<select id="selectAll" resultType="hashmap">
		select * from member
	</select>
</mapper>

